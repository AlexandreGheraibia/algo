import java.util.*;
import java.io.*;
import java.math.*;

/**
 * Auto-generated code below aims at helping you parse
 * the standard input according to the problem statement.
 **/
class Solution {

    static String encode(String msg){
        int length=0;
        String encoded="";
        int sens=1;
        while(msg.length()-length>0)
        {
            String step=msg.substring(0,length);
            msg=msg.substring(length);  
            length++;
            if(sens==-1){
                encoded+=step;    
            }
            else{
                encoded=step+encoded;
            }
            sens*=-1;
        }
       
        if(msg.length()!=0){
            if(sens==-1)
                encoded+=msg;
            else
                encoded=msg+encoded;
        }
        return encoded;
        
    }
    
    static String decode(String msg){
       //delta of the euation x^2+x-length=0
       //delta=b^2-4ac
       int delta=1-4*(-2*msg.length());
       //theorical length of the last character sequence change 
       //x=(-b+sqrt(delta))/2a
       int length=(int)Math.ceil((-1+Math.sqrt(delta))/2);
       //theorical length of the word
       int len=(length+1)*(length)/2;
       String decoded="";
       String fin="",step;
       int sens=1;
       if(length%2==0){
          sens=1;
       }
       else{
        sens=-1;
       }
     
      //if the theorical length is superior or inferior to the real length 
      //means when the word have been encoded we got a rest
      
      if(len>msg.length()){
          if(sens==1){
              len=msg.length()-(len-length);
                fin=msg.substring(0,len);
                msg=msg.substring(len);
                
          }
         else{
             len-=length;
            fin=msg.substring(len);
            msg=msg.substring(0,len);
         }
        length--;
        sens*=-1;
      }else if(len<msg.length()){
        if(sens==1){
              len=msg.length()-len;
                fin=msg.substring(0,len);
                msg=msg.substring(len);
                
          }
         else{
            fin=msg.substring(len);
            msg=msg.substring(0,len);
         }
        sens*=-1;
          
      }
   
       while(length>0){
            if(sens==1){
                step=msg.substring(0,length);
                msg=msg.substring(length);
            }
            else{
                step=msg.substring(msg.length()-length);
                msg=msg.substring(0,msg.length()-length);
            }
            decoded=step+decoded;
            sens*=-1;
            length--;
       }
        decoded+=fin;
        return decoded;
    }
    
    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);
        int N = in.nextInt();
        String encoded="";
        if (in.hasNextLine()) {
            in.nextLine();
        }
        
        String MESSAGE = in.nextLine();
         encoded=MESSAGE;
        if(N>0){//decode message
              for(int i=0;i<N;i++)
                encoded=decode(encoded);
        }
        else{//encode
           
            for(int i=0;i<-N;i++){
                encoded=encode(encoded);
            }
        }
        // Write an action using System.out.println()
        // To debug: System.err.println("Debug messages...");

        System.out.println(encoded);
    }
}
